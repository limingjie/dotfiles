// Place your settings in this file to overwrite the default settings
{
    // Font
    "editor.fontFamily": "Iosevka, Consolas, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.fontWeight": "300", // Iosevka Light
    "editor.fontLigatures": true,

    // Editor
    "editor.rulers": [80, 100, 120],
    "editor.cursorBlinking": "smooth",
    "editor.renderWhitespace": "boundary",
    "editor.renderIndentGuides": true,
    "editor.renderControlCharacters": true,

    // Terminal
    "terminal.integrated.fontFamily": "Iosevka, Consolas, 'Courier New', monospace",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontLigatures": true,

    // Extensions
    "extensions.autoUpdate": true,

    // File
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "off",
    "files.eol": "\n",
    "files.associations": {"Makefile.*": "makefile"},

    // Git
    "git.path": "C:/Program Files/Git/cmd/git.exe",

    // clang
    "C_Cpp.clang_format_path": "C:/Program Files/LLVM/bin/clang-format.exe",
    "clang.executable": "C:/Program Files/LLVM/bin/clang.exe"

    // Trailing Spaces
    "trailing-spaces.highlightCurrentLine": false
}
